<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/musclegroup_text_view"
        android:id="@+id/musclegroupTextView"
        android:layout_gravity="left|top"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp" />

    <Spinner
        android:id="@+id/muscleGroupSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/musclegroup_array"
        android:layout_below="@+id/musclegroupTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_all_button_view"
        android:id="@+id/showAllButton"
        android:layout_marginLeft="31dp"
        android:layout_below="@+id/muscleGroupSpinner"
        android:layout_alignLeft="@+id/musclegroupTextView"
        android:layout_alignStart="@+id/musclegroupTextView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/random_button_view"
        android:id="@+id/randomMoveButton"
        android:layout_gravity="right"
        android:layout_below="@+id/muscleGroupSpinner"
        android:layout_toRightOf="@+id/showAllButton"
        android:layout_marginLeft="55dp" />

</RelativeLayout>
